@model IEnumerable<RetoTecnico.Entidades.Autor>

@{
    ViewBag.Title = "Autores";
}

<h2>Listado de Autores</h2>

<p>
    <a href="@Url.Action("Crear")">➕ Registrar nuevo autor</a>
</p>

@if (!Model.Any())
{
    <p>No hay autores registrados.</p>
}
else
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Completo</th>
                <th>Fecha Nacimiento</th>
                <th>Ciudad</th>
                <th>Correo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in Model)
            {
                <tr>
                    <td>@autor.AutorId</td>
                    <td>@autor.NombreCompleto</td>
                    <td>@autor.FechaNacimiento.ToShortDateString()</td>
                    <td>@autor.CiudadProcedencia</td>
                    <td>@autor.CorreoElectronico</td>
                </tr>
            }
        </tbody>
    </table>
}
